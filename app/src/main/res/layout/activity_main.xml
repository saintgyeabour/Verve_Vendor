<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/message"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-medium"
        android:text="Please, Choose your region"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="480dp"
    android:orientation="vertical"
    android:id="@+id/ll1"
    android:background="c"
    android:layout_gravity="center"
>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textAlignment="center"
            android:text="Accra"
            android:id="@+id/rbnAccra"
            android:layout_margin="20dp"

         />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textAlignment="center"
        android:text="Ashanti"
        android:id="@+id/rbnAshanti"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textAlignment="center"
        android:text= "Bono"
        android:id="@+id/rbnBono"
        android:layout_margin="20dp"

        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textAlignment="center"
        android:text="Bono East"
        android:id="@+id/rbnBEast"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textAlignment="center"
        android:text="Cape Coast"
        android:id="@+id/rbnCape"
        android:layout_margin="20dp"

        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textAlignment="center"
        android:text="Eastern"
        android:id="@+id/rbnEast"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textAlignment="center"
        android:text="Western"
        android:id="@+id/rbnWest"
        android:layout_margin="20dp"

        />

</LinearLayout>



</LinearLayout>










